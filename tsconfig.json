{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es5",
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom", "webworker"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    // "noImplicitThis": true,
    "noImplicitAny": true,
    // "strictNullChecks": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
